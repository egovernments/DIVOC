PWD := $(shell pwd)
GOPATH := $(shell go env GOPATH)

all: build run

deps:
	@GO111MODULE=off go get -u github.com/myitcv/gobin
	@gobin github.com/go-swagger/go-swagger/cmd/swagger@v0.25.0
	@gobin github.com/golangci/golangci-lint/cmd/golangci-lint@v1.24.0

swagger_gen/restapi/server.go: ../interfaces/admin-portal.yaml
	@mkdir $(PWD)/swagger_gen || echo 'exists'
	@echo $(PWD)/../interfaces/admin-portal.yaml
	@$(GOPATH)/bin/swagger generate server --exclude-main -t ./swagger_gen -f $(PWD)/../interfaces/admin-portal.yaml

api_docs:
	@echo "Installing swagger-merger" && npm install swagger-merger -g
	@swagger-merger -i $(PWD)/../interfaces/admin-portal.yaml -o $(PWD)/docs/api_docs/bundle.yaml

build: divoc-portal-api-server

divoc-portal-api-server: swagger_gen/restapi/server.go
	@echo "Building Server to $(PWD)/divoc-server ..."
	@CGO_ENABLED=1 GO111MODULE=on go build github.com/divoc/portal-api/cmd/divoc-portal-api-server

clean:
	@echo "Cleaning up all the generated files"
	@find . -name '*.test' | xargs rm -fv
	@rm -rf build
	@rm -rf release
	#@rm `find swagger_gen|grep -v configure_divoc`
	@rm  `grep -lr '// Code generated by go-swagger; DO NOT EDIT.' swagger_gen`

run: ./divoc-portal-api-server
	@echo "Running api server"
	./divoc-portal-api-server --scheme http --port 8001
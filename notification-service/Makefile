PWD := $(shell pwd)
GOPATH := $(shell go env GOPATH)
source := $(wildcard *.go **/*.go */*/*.go)

all: notification-service run

deps:
	@GO111MODULE=off go get -u github.com/myitcv/gobin
	@$(GOPATH)/bin/gobin github.com/go-swagger/go-swagger/cmd/swagger@v0.25.0
	@$(GOPATH)/bin/gobin github.com/golangci/golangci-lint/cmd/golangci-lint@v1.24.0

swagger_gen/restapi/server.go: ../interfaces/notification-service.yaml
	@mkdir $(PWD)/swagger_gen || echo 'exists'
	@$(GOPATH)/bin/swagger generate server --exclude-main -t ./swagger_gen -f $(PWD)/../interfaces/notification-service.yaml --principal models.JWTClaimBody

api_docs:
	@echo "Installing swagger-merger" && npm install swagger-merger -g
	@swagger-merger -i $(PWD)/../interfaces/notification-service.yaml -o $(PWD)/bundle.yaml

build: notification-service
	@echo "building $(source)"
	@echo $(source)

notification-service: $(source) swagger_gen/restapi/server.go
	@echo "Building Server to $(PWD)/notification-service ..."
	@CGO_ENABLED=1 GO111MODULE=on go build github.com/divoc/notification-service/cmd/notification-service

clean:
	@echo "Cleaning up all the generated files"
	@find . -name '*.test' | xargs rm -fv
	@rm -rf build
	@rm -rf release
	#@rm `find swagger_gen|grep -v configure_notification_service`
	@rm  `grep -lr '// Code generated by go-swagger; DO NOT EDIT.' swagger_gen`

run: ./notification-service
	@echo "Running api server"
	./notification-service --scheme http --port 8765
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.cf]
indent_size = 2
max_line_length = 119

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.py]
max_line_length = 119

[*.{js,json,yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
